                            <main>
                                <div>
                                    <% if (typeof success !=='undefined' && success.length) { %>
                                        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative w-1/2 mx-auto"
                                            role="alert">
                                            <%= success %>
                                                <button type="button" class="absolute top-0 right-0 px-4 py-3"
                                                    onclick="this.parentElement.remove()"
                                                    aria-label="Close">&times;</button>
                                        </div>
                                        <% } %>

                                            <% if (typeof error !=='undefined' && error.length) { %>
                                                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative w-1/2 mx-auto"
                                                    role="alert">
                                                    <%= error %>
                                                        <button type="button" class="absolute top-0 right-0 px-4 py-3"
                                                            onclick="this.parentElement.remove()"
                                                            aria-label="Close">&times;</button>
                                                </div>
                                                <% } %>
                                </div>
                            </main> -->

                            <%- body %>
                        </div>
                    </main>


</body>

</html>