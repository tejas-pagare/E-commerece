        <a href="about" class="text-gray-700 hover:text-emerald-600">About</a>
        <!-- <a href="blog" class="text-gray-700 hover:text-emerald-600">Blogs</a> -->
        <a href="dashboard" class="text-gray-700 hover:text-emerald-600">Dashboard</a>
