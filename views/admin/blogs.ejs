<div class="max-w-4xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8 border border-gray-200">
  <h2 class="text-2xl font-bold mb-6 text-green-700">Blogs</h2>
  <a href="/api/v1/admin/blog/create" class="inline-block mb-6 bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md transition-colors">Create New Blog</a>
  <% if (blogs && blogs.length > 0) { %>
    <div class="space-y-8">
      <% blogs.forEach(blog => { %>
        <div class="border-b pb-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= blog.title %></h3>
          <div class="flex flex-col md:flex-row md:items-center md:space-x-6">
            <% if (blog.image) { %>
              <img src="<%= blog.image %>" alt="Blog Image" class="w-40 h-32 object-cover rounded mb-3 md:mb-0 border" />
            <% } %>
            <div class="flex-1">
              <p class="text-gray-700 mb-2"><%= blog.content.length > 200 ? blog.content.substring(0, 200) + '...' : blog.content %></p>
              <div class="text-sm text-gray-500">By <%= blog.author %> &middot; <%= blog.createdAt.toLocaleDateString() %></div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-gray-500 text-center">No blogs found.</div>
  <% } %>
</div>
