<body class="bg-slate-50 text-slate-900">
  <div class="min-h-screen">
    <div class="mx-auto max-w-7xl p-6">

      <!-- Header / Hero -->
      <div class="relative overflow-hidden rounded-xl border bg-white p-8 shadow-sm mb-8">
        <div class="flex items-center justify-between gap-6">
          <div>
            <h1 class="text-2xl font-semibold tracking-tight">Welcome back! SwiftMart</h1>
            <p class="mt-1 text-sm text-slate-500">SwiftMart is simple & clean design for developers and designers.</p>
          </div>
        </div>
      </div>

      <!-- Stats -->
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 mb-8">
        <!-- Earnings -->
        <div class="rounded-xl border bg-white p-6 shadow-sm">
          <div class="flex items-start justify-between">
            <div>
              <p class="text-sm text-slate-500">Earnings</p>
              <h3 class="mt-2 text-3xl font-semibold tracking-tight">
                <%= Math.round(totalCartAmount) %>
              </h3>
              <p class="mt-1 text-sm text-slate-500">Monthly revenue</p>
            </div>
            <div class="h-10 w-10 rounded-full bg-rose-100 text-rose-600 grid place-items-center">
              <i class="fas fa-dollar-sign"></i>
            </div>
          </div>
        </div>

        <!-- Orders -->
        <div class="rounded-xl border bg-white p-6 shadow-sm">
          <div class="flex items-start justify-between">
            <div>
              <p class="text-sm text-slate-500">Orders</p>
              <h3 class="mt-2 text-3xl font-semibold tracking-tight">
                <%= customerOrders %>
              </h3>
              <p class="mt-1 text-sm text-slate-500">35+ New Sales</p>
            </div>
            <div class="h-10 w-10 rounded-full bg-amber-100 text-amber-600 grid place-items-center">
              <i class="fas fa-shopping-cart"></i>
            </div>
          </div>
        </div>

        <!-- Customers -->
        <div class="rounded-xl border bg-white p-6 shadow-sm">
          <div class="flex items-start justify-between">
            <div>
              <p class="text-sm text-slate-500">Customers</p>
              <h3 class="mt-2 text-3xl font-semibold tracking-tight">
                <%= CustomerCount %>
              </h3>
              <p class="mt-1 text-sm text-slate-500">30+ new in 2 days</p>
            </div>
            <div class="h-10 w-10 rounded-full bg-sky-100 text-sky-600 grid place-items-center">
              <i class="fas fa-users"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Charts -->
      <div class="grid gap-6 lg:grid-cols-3 mb-8">
        <!-- Revenue -->
        <div class="rounded-xl border bg-white p-6 shadow-sm lg:col-span-2">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h2 class="text-base font-medium">Revenue</h2>
              <p class="text-sm text-slate-500">(+63% than last year)</p>
            </div>
            <div class="rounded-md border px-2 py-1 text-sm text-slate-600">
              <select class="outline-none bg-transparent">
                <option>2019</option>
              </select>
            </div>
          </div>
          <div class="relative h-64 rounded-lg bg-slate-50">
            <svg width="100%" height="100%" viewBox="0 0 700 240">
              <!-- grid -->
              <line x1="0" y1="40" x2="700" y2="40" stroke="#e5e7eb" stroke-width="1" />
              <line x1="0" y1="80" x2="700" y2="80" stroke="#e5e7eb" stroke-width="1" />
              <line x1="0" y1="120" x2="700" y2="120" stroke="#e5e7eb" stroke-width="1" />
              <line x1="0" y1="160" x2="700" y2="160" stroke="#e5e7eb" stroke-width="1" />
              <line x1="0" y1="200" x2="700" y2="200" stroke="#e5e7eb" stroke-width="1" />

              <!-- series 1 -->
              <path d="M50,80 C100,100 150,60 200,100 C250,150 350,50 400,80 C450,120 550,80 650,100 L650,200 L50,200 Z" fill="rgba(234,179,8,0.12)" />
              <path d="M50,80 C100,100 150,60 200,100 C250,150 350,50 400,80 C450,120 550,80 650,100" stroke="#eab308" stroke-width="2" fill="none" />

              <!-- series 2 -->
              <path d="M50,150 C100,120 150,140 200,90 C300,140 400,120 500,60 C550,40 600,80 650,40 L650,200 L50,200 Z" fill="rgba(16,185,129,0.10)" />
              <path d="M50,150 C100,120 150,140 200,90 C300,140 400,120 500,60 C550,40 600,80 650,40" stroke="#10b981" stroke-width="2" fill="none" />

              <!-- points -->
              <circle cx="50" cy="150" r="3" fill="#10b981" />
              <circle cx="150" cy="140" r="3" fill="#10b981" />
              <circle cx="300" cy="140" r="3" fill="#10b981" />
              <circle cx="400" cy="120" r="3" fill="#10b981" />
              <circle cx="500" cy="60" r="3" fill="#10b981" />
              <circle cx="650" cy="40" r="3" fill="#10b981" />

              <circle cx="50" cy="80" r="3" fill="#eab308" />
              <circle cx="150" cy="60" r="3" fill="#eab308" />
              <circle cx="250" cy="150" r="3" fill="#eab308" />
              <circle cx="400" cy="80" r="3" fill="#eab308" />
              <circle cx="550" cy="80" r="3" fill="#eab308" />
              <circle cx="650" cy="100" r="3" fill="#eab308" />

              <!-- x labels -->
              <text x="50" y="220" text-anchor="middle" font-size="12" fill="#6b7280">Jan</text>
              <text x="150" y="220" text-anchor="middle" font-size="12" fill="#6b7280">Feb</text>
              <text x="250" y="220" text-anchor="middle" font-size="12" fill="#6b7280">Mar</text>
              <text x="350" y="220" text-anchor="middle" font-size="12" fill="#6b7280">Apr</text>
              <text x="450" y="220" text-anchor="middle" font-size="12" fill="#6b7280">May</text>
              <text x="550" y="220" text-anchor="middle" font-size="12" fill="#6b7280">Jun</text>
              <text x="650" y="220" text-anchor="middle" font-size="12" fill="#6b7280">Jul</text>

              <!-- y labels -->
              <text x="25" y="205" text-anchor="middle" font-size="12" fill="#6b7280">30k</text>
              <text x="25" y="165" text-anchor="middle" font-size="12" fill="#6b7280">40k</text>
              <text x="25" y="125" text-anchor="middle" font-size="12" fill="#6b7280">60k</text>
              <text x="25" y="85" text-anchor="middle" font-size="12" fill="#6b7280">80k</text>
              <text x="25" y="45" text-anchor="middle" font-size="12" fill="#6b7280">100k</text>
            </svg>

            <div class="absolute top-2 right-2 flex items-center gap-4 text-xs text-slate-600">
              <span class="inline-flex items-center gap-1"><span class="h-2 w-2 rounded-full bg-emerald-500"></span> Total Income</span>
              <span class="inline-flex items-center gap-1"><span class="h-2 w-2 rounded-full bg-amber-400"></span> Total Expense</span>
            </div>
          </div>
        </div>

        <!-- Total Sales -->
        <div class="rounded-xl border bg-white p-6 shadow-sm">
          <h2 class="text-base font-medium mb-4">Total Sales</h2>
          <div class="flex items-center justify-center h-48">
            <div class="relative h-40 w-40">
              <svg viewBox="0 0 100 100">
                <circle cx="50" cy="50" r="45" fill="none" stroke="#e5e7eb" stroke-width="10" />
                <circle cx="50" cy="50" r="45" fill="none" stroke="#10b981" stroke-width="10" stroke-dasharray="282.6" stroke-dashoffset="70" />
                <circle cx="50" cy="50" r="45" fill="none" stroke="#ef4444" stroke-width="10" stroke-dasharray="282.6" stroke-dashoffset="260" transform="rotate(-90 50 50)" />
                <circle cx="50" cy="50" r="45" fill="none" stroke="#eab308" stroke-width="10" stroke-dasharray="282.6" stroke-dashoffset="230" transform="rotate(-40 50 50)" />
                <circle cx="50" cy="50" r="45" fill="none" stroke="#3b82f6" stroke-width="10" stroke-dasharray="282.6" stroke-dashoffset="200" transform="rotate(40 50 50)" />
              </svg>
              <div class="absolute inset-0 grid place-items-center text-center">
                <div class="text-emerald-600 text-sm font-medium">Total Sales</div>
                <div class="text-2xl font-semibold">9600</div>
              </div>
            </div>
          </div>
          <div class="mt-4">
            <div class="flex items-center gap-2 text-sm text-slate-700 mb-1">
              <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
              <span>Shippings 32.98 (2%)</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-slate-700 mb-1">
              <span class="h-2 w-2 rounded-full bg-amber-500"></span>
              <span>Refunds 11.00 (11%)</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-slate-700 mb-1">
              <span class="h-2 w-2 rounded-full bg-rose-500"></span>
              <span>Order 14.87 (1%)</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-slate-700">
              <span class="h-2 w-2 rounded-full bg-sky-500"></span>
              <span>Income 12.00 (86%)</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Sales Overview + Notifications -->
      <div class="grid gap-6 lg:grid-cols-3 mb-8">
        <div class="rounded-xl border bg-white p-6 shadow-sm lg:col-span-2">
          <h2 class="text-base font-medium mb-6">Sales Overview</h2>

          <div class="mb-4">
            <div class="flex items-center justify-between mb-1 text-sm">
              <span class="text-slate-600">Total Profit</span>
              <span class="text-slate-600">1,619 (8.6%)</span>
            </div>
            <div class="h-2 w-full rounded-full bg-slate-100">
              <div class="h-2 rounded-full bg-emerald-500" style="width: 8.6%"></div>
            </div>
          </div>

          <div class="mb-4">
            <div class="flex items-center justify-between mb-1 text-sm">
              <span class="text-slate-600">Total Income</span>
              <span class="text-slate-600">3,571 (86.4%)</span>
            </div>
            <div class="h-2 w-full rounded-full bg-slate-100">
              <div class="h-2 rounded-full bg-sky-500" style="width: 86.4%"></div>
            </div>
          </div>

          <div>
            <div class="flex items-center justify-between mb-1 text-sm">
              <span class="text-slate-600">Total Expenses</span>
              <span class="text-slate-600">3,430 (74.5%)</span>
            </div>
            <div class="h-2 w-full rounded-full bg-slate-100">
              <div class="h-2 rounded-full bg-rose-500" style="width: 74.5%"></div>
            </div>
          </div>
        </div>

        <div class="flex flex-col gap-4">
          <div class="rounded-xl border bg-white p-6 shadow-sm">
            <div class="flex items-start gap-4">
              <div class="text-amber-500 text-2xl">
                <i class="fa-solid fa-bell"></i>
              </div>
              <div>
                <h3 class="font-medium">Start your day with New Notification.</h3>
                <p class="mt-1 text-sm text-slate-500">You have <span class="text-sky-600">2 new notifications</span></p>
              </div>
            </div>
          </div>

          <div class="rounded-xl border bg-white p-6 shadow-sm">
            <div class="flex items-start gap-4">
              <div class="text-emerald-500 text-2xl">
                <i class="fa-solid fa-lightbulb"></i>
              </div>
              <div>
                <h3 class="font-medium">Monitor your Sales and Profitability</h3>
                <p class="mt-1 text-sm text-slate-500">You have <span class="text-sky-600">View Performance</span></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Orders -->
      <div class="rounded-xl border bg-white p-6 shadow-sm mb-8">
        <h2 class="text-base font-medium mb-4">Recent Orders</h2>
        <div class="overflow-x-auto">
          <table class="w-full text-left text-sm">
            <thead class="bg-slate-50 text-slate-600">
              <tr>
                <th class="p-3 font-medium">Order</th>
                <th class="p-3 font-medium">Product Name</th>
                <th class="p-3 font-medium">Order Date</th>
                <th class="p-3 font-medium">Price</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <% registeredProducts.forEach(product=> { %>
                <tr class="hover:bg-slate-50/60">
                  <td class="p-3 text-slate-700">
                    <img src=<%=product.image %> alt="Product image" class="h-10 w-10 rounded object-cover">
                  </td>
                  <td class="p-3 text-slate-700">
                    <%= product.title %>
                  </td>
                  <td class="p-3 text-slate-700">
                    <%= (product.createdAt ).toString().split("T")?.[0]%>
                  </td>
                  <td class="p-3 text-slate-700">
                    <%= product.price %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</body>