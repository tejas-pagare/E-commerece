<main class="min-h-screen w-full bg-gradient-to-b from-green-50 to-green-100">
  <section class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <!-- Header: shadcn-like -->
    <div class="mb-6 rounded-xl border border-green-200 bg-white/80 backdrop-blur-sm shadow-sm">
      <div class="px-6 py-5">
        <h1 class="text-3xl font-semibold tracking-tight text-green-900">Admin Dashboard</h1>
        <p class="mt-1 text-sm text-green-800/80">All donated clothes at a glance. Manage statuses and review submissions.</p>
      </div>
    </div>

  <!-- Card -->
  <div class="bg-white border border-green-200 rounded-xl shadow-sm">
      <div class="p-6 border-b border-green-100">
        <h2 class="text-xl font-semibold text-green-900">
          Donated Clothes List
        </h2>
      </div>

      <div class="p-2 sm:p-4">
        <!-- Mobile list (cards) -->
        <div class="grid gap-4 md:hidden">
          <% products.forEach(p => { %>
            <div class="rounded-lg border border-green-200 bg-white shadow-sm overflow-hidden">
              <div class="p-4 space-y-3">
                <div class="flex items-start justify-between gap-4">
                  <div class="min-w-0">
                    <p class="text-sm text-green-700">User</p>
                    <p class="font-medium text-green-900 truncate"><%= p.username %></p>
                  </div>
                  <div class="shrink-0">
                    <% if (p.imageSrc) { %>
                      <img src="<%= p.imageSrc %>" alt="img" class="w-12 h-12 object-cover rounded-md ring-1 ring-green-200" />
                    <% } else { %>
                      <span class="text-xs text-gray-400">N/A</span>
                    <% } %>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-3 text-sm">
                  <div>
                    <p class="text-green-700">Item</p>
                    <p class="text-green-900 font-medium break-words"><%= p.items %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Fabric</p>
                    <p class="text-green-900 font-medium"><%= p.fabric %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Size</p>
                    <p class="text-green-900 font-medium"><%= p.size || 'N/A' %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Gender</p>
                    <p class="text-green-900 font-medium capitalize"><%= p.gender %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Usage</p>
                    <p class="text-green-900 font-medium"><%= p.readableUsage %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Date</p>
                    <p class="text-green-900 font-medium"><%= p.clothesDate.toISOString().split('T')[0] %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Slot</p>
                    <p class="text-green-900 font-medium capitalize"><%= p.timeSlot %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Admin Status</p>
                    <p class="text-green-900 font-medium"><%= p.adminStatus %></p>
                  </div>
                  <div>
                    <p class="text-green-700">Value</p>
                    <p class="text-green-900 font-medium"><%= p.estimated_value || 'N/A' %></p>
                  </div>
                </div>

                <div class="pt-2">
                  <form action="sellproduct" method="POST" class="flex items-center gap-2" data-has-loader>
                    <input type="hidden" name="id" value="<%= p.id %>"/>
                    <label for="userStatus-<%= p.id %>" class="sr-only">User Status</label>
                    <select id="userStatus-<%= p.id %>" name="userStatus"
                      class="w-full border border-green-300 rounded-md bg-white px-3 py-2 text-sm text-green-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                      <option value="Pending" <%= p.userStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                      <option value="Verified" <%= p.userStatus === 'Verified' ? 'selected' : '' %>>Verified</option>
                      <option value="Rejected" <%= p.userStatus === 'Rejected' ? 'selected' : '' %>>Reject</option>
                    </select>

                    <button type="submit"
                      class="inline-flex items-center gap-2 rounded-md border border-green-600 bg-green-600 text-white px-3 py-2 text-sm font-medium shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 disabled:opacity-60 disabled:cursor-not-allowed"
                      aria-live="polite">
                      <svg data-spinner class="size-4 animate-spin hidden text-white"
                        viewBox="0 0 24 24" fill="none" aria-hidden="true">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor"
                          d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
                      </svg>
                      <span data-label>Update</span>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <!-- Desktop table -->
        <div class="hidden md:block">
          <div class="overflow-x-auto rounded-lg border border-green-200">
            <table class="w-full text-left border-collapse">
              <thead class="bg-green-100/70 text-green-900 text-sm">
                <tr>
                  <th class="px-4 py-3 font-semibold">User</th>
                  <th class="px-4 py-3 font-semibold">Item</th>
                  <th class="px-4 py-3 font-semibold">Fabric</th>
                  <th class="px-4 py-3 font-semibold">Size</th>
                  <th class="px-4 py-3 font-semibold">Gender</th>
                  <th class="px-4 py-3 font-semibold">Usage</th>
                  <th class="px-4 py-3 font-semibold">Date</th>
                  <th class="px-4 py-3 font-semibold">Slot</th>
                  <th class="px-4 py-3 font-semibold">User Status</th>
                  <th class="px-4 py-3 font-semibold">Admin Status</th>
                  <th class="px-4 py-3 font-semibold">Value</th>
                  <th class="px-4 py-3 font-semibold">Image</th>
                </tr>
              </thead>
              <tbody class="bg-white text-sm">
                <% products.forEach(p => { %>
                  <tr class="border-t border-green-100 hover:bg-green-50/60">
                    <td class="px-4 py-3 text-green-900"><%= p.username %></td>
                    <td class="px-4 py-3 text-green-900"><%= p.items %></td>
                    <td class="px-4 py-3 text-green-900"><%= p.fabric %></td>
                    <td class="px-4 py-3 text-green-900"><%= p.size || 'N/A' %></td>
                    <td class="px-4 py-3 text-green-900 capitalize"><%= p.gender %></td>
                    <td class="px-4 py-3 text-green-900"><%= p.readableUsage %></td>
                    <td class="px-4 py-3 text-green-900"><%= p.clothesDate.toISOString().split('T')[0] %></td>
                    <td class="px-4 py-3 text-green-900 capitalize"><%= p.timeSlot %></td>
                    <td class="px-4 py-3">
                      <form action="sellproduct" method="POST" class="flex items-center gap-2" data-has-loader>
                        <input type="hidden" name="id" value="<%= p.id %>"/>
                        <label for="userStatus-desktop-<%= p.id %>" class="sr-only">User Status</label>
                        <select id="userStatus-desktop-<%= p.id %>" name="userStatus"
                          class="min-w-36 border border-green-300 rounded-md bg-white px-3 py-2 text-sm text-green-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                          <option value="Pending" <%= p.userStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                          <option value="Verified" <%= p.userStatus === 'Verified' ? 'selected' : '' %>>Verified</option>
                          <option value="Rejected" <%= p.userStatus === 'Rejected' ? 'selected' : '' %>>Reject</option>
                        </select>

                        <button type="submit"
                          class="inline-flex items-center gap-2 rounded-md border border-green-600 bg-green-600 text-white px-3 py-2 text-sm font-medium shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 disabled:opacity-60 disabled:cursor-not-allowed"
                          aria-live="polite">
                          <svg data-spinner class="size-4 animate-spin hidden text-white"
                            viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor"
                              d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
                          </svg>
                          <span data-label>Update</span>
                        </button>
                      </form>
                    </td>
                    <td class="px-4 py-3 text-green-900"><%= p.adminStatus %></td>
                    <td class="px-4 py-3 text-green-900"><%= p.estimated_value || 'N/A' %></td>
                    <td class="px-4 py-3">
                      <% if (p.imageSrc) { %>
                        <img src="<%= p.imageSrc %>" alt="img" class="w-12 h-12 object-cover rounded-md ring-1 ring-green-200" />
                      <% } else { %>
                        <span class="text-gray-400">N/A</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Button loader script -->
  <script>
    (function () {
      document.addEventListener('DOMContentLoaded', function () {
        var forms = document.querySelectorAll('form[data-has-loader]');
        forms.forEach(function (form) {
          form.addEventListener('submit', function () {
            var btn = form.querySelector('button[type="submit"]');
            if (!btn) return;
            btn.disabled = true;
            var spinner = btn.querySelector('[data-spinner]');
            var label = btn.querySelector('[data-label]');
            if (spinner) spinner.classList.remove('hidden');
            if (label) label.textContent = 'Updating...';
          }, { once: true });
        });
      });
    })();
  </script>
</main>
  