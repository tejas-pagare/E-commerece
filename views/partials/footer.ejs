<% if (!(title && (title.toLowerCase() === "login" || title.toLowerCase() === "signup"))) { %>
    <footer id="site-footer" class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-7xl mx-auto px-4 py-12 grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Brand & Mission -->
        <div>
          <div class="flex items-center gap-2 mb-3">
            <span class="text-2xl font-semibold tracking-tight bg-gradient-to-r from-green-600 to-green-700 bg-clip-text text-transparent">SwiftMart</span>
          </div>
          <p class="text-sm text-gray-600 leading-relaxed">
            Your one-stop shop for quality products at the best prices.<br>
            Shop with confidence and convenience.
          </p>
        </div>
        <!-- Quick Links -->
        <div>
          <h3 class="text-base font-semibold text-gray-900 mb-3">Quick Links</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/api/v1/user/" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">Home</a></li>
            <li><a href="/api/v1/user/shop" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">Shop</a></li>
            <li><a href="/api/v1/user/blog" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">Blog</a></li>
            <li><a href="/api/v1/user/contact" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">Contact</a></li>
          </ul>
        </div>
        <!-- Customer Service -->
        <div>
          <h3 class="text-base font-semibold text-gray-900 mb-3">Customer Service</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="#" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">FAQ</a></li>
            <li><a href="#" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">Shipping & Returns</a></li>
            <li><a href="#" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">Privacy Policy</a></li>
            <li><a href="#" class="text-gray-600 hover:text-green-700 hover:underline underline-offset-4 focus:outline-none focus:ring-2 focus:ring-green-200 rounded">Terms & Conditions</a></li>
          </ul>
        </div>
        <!-- Newsletter & Social -->
        <div>
          <h3 class="text-base font-semibold text-gray-900 mb-3">Stay Connected</h3>
          <form class="flex items-center gap-2 mb-4" onsubmit="event.preventDefault(); /* integrate real submit later */">
            <label for="newsletter-email" class="sr-only">Email address</label>
            <input id="newsletter-email" type="email" placeholder="Your email"
                   class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-green-200 focus:border-green-500" required />
            <button type="submit"
                    class="inline-flex items-center rounded-md bg-green-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-200">
              Subscribe
            </button>
          </form>
          <div class="flex items-center gap-3">
            <a href="#" aria-label="Facebook"
               class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-gray-200 text-gray-600 hover:text-green-700 hover:border-green-300 focus:outline-none focus:ring-2 focus:ring-green-200 transition-colors">
              <i class="fab fa-facebook-f text-sm"></i>
            </a>
            <a href="#" aria-label="Twitter"
               class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-gray-200 text-gray-600 hover:text-green-700 hover:border-green-300 focus:outline-none focus:ring-2 focus:ring-green-200 transition-colors">
              <i class="fab fa-twitter text-sm"></i>
            </a>
            <a href="#" aria-label="Instagram"
               class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-gray-200 text-gray-600 hover:text-green-700 hover:border-green-300 focus:outline-none focus:ring-2 focus:ring-green-200 transition-colors">
              <i class="fab fa-instagram text-sm"></i>
            </a>
            <a href="#" aria-label="LinkedIn"
               class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-gray-200 text-gray-600 hover:text-green-700 hover:border-green-300 focus:outline-none focus:ring-2 focus:ring-green-200 transition-colors">
              <i class="fab fa-linkedin-in text-sm"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="border-t border-gray-200 py-4 text-center text-gray-500 text-sm">
        &copy; 2025 SwiftMart. All Rights Reserved.
      </div>
    </footer>

    <script>
      // Hide footer on root portal path(s) to avoid mixed UI when landing at "/"
      document.addEventListener('DOMContentLoaded', function () {
        try {
          var footer = document.getElementById('site-footer');
          if (!footer) return;
          var p = window.location.pathname.replace(/\/+$/, '') || '/';
          // Add any additional root paths you want to treat as portal roots
          var portalPaths = ['/', '/index', '/home', '/api/v1/']; 
          if (portalPaths.indexOf(p) !== -1 || p === '/') {
            footer.style.display = 'none';
          }
        } catch (e) {
          // silent fail
        }
      });
    </script>
<% } %>
