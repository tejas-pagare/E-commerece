<body class="bg-gray-100 text-gray-800">
    <main class="flex">
        <aside class="w-64 h-screen bg-green-200 p-6 rounded-lg text-center shadow-md">
            <div class="profile mb-4">
                <img src="https://img.freepik.com/premium-vector/avatar-profile-icon-flat-style-female-user-profile-vector-illustration-isolated-background-women-profile-sign-business-concept_157943-38866.jpg?semt=ais_hybrid"
                    alt="Profile Picture" class="w-20 h-20 rounded-full object-cover mx-auto" />
                <h3 class="text-lg font-semibold mt-2" id="user-name-sidebar">Loading...</h3>
            </div>
            <nav class="space-y-2">
                <a href="/api/v1/user/account" class="block py-2 font-medium text-black hover:text-green-700">Account</a>
                <a href="/api/v1/user/account/address" class="block py-2 font-medium text-black hover:text-green-700">Address</a>
                <a href="/api/v1/user/dashboard" class="block py-2 font-medium text-black hover:text-green-700">Orders</a>
                <a href="/api/v1/user/cart" class="block py-2 font-medium text-black hover:text-green-700">Cart</a>
                <a href="/api/v1/user/logout" class="block py-2 font-medium text-black hover:text-green-700">Log Out</a>
            </nav>
        </aside>

        <section class="flex-1 p-8 bg-white rounded-lg shadow-md">
            <h1 class="text-3xl font-bold mb-6 tracking-tight">My Account</h1>
            <hr class="mb-6">
           
            <div id="notification" class="hidden p-4 mb-4 text-sm rounded-lg" role="alert"></div>

            <form id="update-form" class="space-y-6">
                <h2 class="text-2xl font-semibold tracking-tight">Account Details</h2>

                <div>
                    <label for="firstname" class="block font-medium text-sm text-gray-700">First Name *</label>
                    <input id="firstname" name="firstname" type="text"
                        placeholder="Loading..." class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
                </div>

                <div>
                    <label for="lastname" class="block font-medium text-sm text-gray-700">Last Name *</label>
                    <input id="lastname" name="lastname" type="text"
                        placeholder="Loading..." class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
                </div>

                <div>
                    <label for="email" class="block font-medium text-sm text-gray-700">Email *</label>
                    <input id="email" name="email" type="email" placeholder="Loading..."
                        class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
                </div>

                <hr class="my-6">

                <button type="submit" id="submit-btn" class="px-5 py-2.5 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 transition-colors">
                    Save Changes
                </button>
            </form>
        </section>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('update-form');
            const submitBtn = document.getElementById('submit-btn');
            const notification = document.getElementById('notification');
            
            const xhrFetch = new XMLHttpRequest();
            xhrFetch.open('GET', '/api/v1/user/account/details', true);
            xhrFetch.onload = function() {
                if (xhrFetch.status >= 200 && xhrFetch.status < 300) {
                    const data = JSON.parse(xhrFetch.responseText);
                    if (data.success) {
                        const user = data.user;
                        document.getElementById('firstname').value = user.firstname;
                        document.getElementById('lastname').value = user.lastname;
                        document.getElementById('email').value = user.email;
                        document.getElementById('user-name-sidebar').textContent = user.firstname + ' ' + user.lastname;
                    }
                }
            };
            xhrFetch.send();

            form.addEventListener('submit', function(event) {
                event.preventDefault();
                submitBtn.disabled = true;
                submitBtn.textContent = 'Saving...';
                
                const formData = {
                    firstname: document.getElementById('firstname').value,
                    lastname: document.getElementById('lastname').value,
                    email: document.getElementById('email').value
                };

                const xhrSubmit = new XMLHttpRequest();
                xhrSubmit.open('POST', '/api/v1/user/account/update', true);
                xhrSubmit.setRequestHeader('Content-Type', 'application/json');

                xhrSubmit.onload = function() {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Save Changes';

                    if (xhrSubmit.status >= 200 && xhrSubmit.status < 300) {
                        showNotification('Account updated successfully!', false);
                        setTimeout(() => { window.location.href = "/api/v1/user/account"; }, 1500);
                    } else {
                        showNotification('Failed to update account. Please try again.', true);
                    }
                };
                xhrSubmit.onerror = function() {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Save Changes';
                    showNotification('A network error occurred.', true);
                };

                xhrSubmit.send(JSON.stringify(formData));
            });
            function showNotification(message, isError = false) {
                notification.textContent = message;
                notification.className = isError 
                    ? 'p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50'
                    : 'p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50';
                notification.classList.remove('hidden');
            }
        });
    </script>
</body>