<body class="bg-gray-100 text-gray-800">
    <main class="flex">
        <%- include('../../partials/profileSidebar.ejs') %>

        <section class="flex-1 p-6 bg-white rounded-lg shadow-md">
            <h1 class="text-2xl font-bold mb-6">My Account</h1>
            <hr class="mb-6">

            <div class="mb-6">
                <h2 class="text-xl font-semibold mb-4">Account Details</h2>

                <label class="block font-bold">First Name *</label>
                <p id="firstname-p">Loading...</p>

                <label class="block font-bold mt-4">Last Name *</label>
                <p id="lastname-p">Loading...</p>

                <label class="block font-bold mt-4">Email *</label>
                <p id="email-p">Loading...</p>

                <a class="mt-12 block w-[180px] px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-center"
                    href="/api/v1/user/account/update">Update Account</a>
            </div>
        </section>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const xhr = new XMLHttpRequest();
            xhr.open('GET', '/api/v1/user/account/details', true);

            xhr.onload = function() {
                if (xhr.status >= 200 && xhr.status < 300) {
                    const data = JSON.parse(xhr.responseText);
                    if (data.success) {
                        const user = data.user;
                        document.getElementById('firstname-p').textContent = user.firstname;
                        document.getElementById('lastname-p').textContent = user.lastname;
                        document.getElementById('email-p').textContent = user.email;
                    } else {
                        console.error('Failed to load user details:', data.message);
                    }
                } else {
                    console.error('Error fetching user details. Status:', xhr.status);
                }
            };

            xhr.onerror = function() {
                console.error('Network error occurred.');
            };

            xhr.send();
        });
    </script>
</body>