<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <aside class="w-64 h-screen bg-green-200 p-6 shadow-md text-center">
            <div class="profile mb-6">
                <img src="https://img.freepik.com/premium-vector/avatar-profile-icon-flat-style-female-user-profile-vector-illustration-isolated-background-women-profile-sign-business-concept_157943-38866.jpg?semt=ais_hybrid"
                    alt="Profile Picture" class="w-20 h-20 rounded-full object-cover mx-auto" />
                <h3 class="text-lg font-semibold mt-2">
                    <span id="user-name">Loading...</span>
                </h3>
            </div>
            <nav class="space-y-2">
                <a href="/api/v1/user/account" class="block py-2 font-medium text-black hover:text-green-700">Account</a>
                <a href="/api/v1/user/account/address"
                    class="block py-2 font-medium text-black hover:text-green-700">Address</a>
                <a href="/api/v1/user/dashboard" class="block py-2 font-medium text-black hover:text-green-700">Orders</a>
                <a href="/api/v1/user/cart" class="block py-2 font-medium text-black hover:text-green-700">Cart</a>
                <a href="/api/v1/user/logout" class="block py-2 font-medium text-black hover:text-green-700">Log Out</a>
            </nav>
        </aside>

        <div class="flex-1 flex justify-center items-center p-8">
            <div class="w-full max-w-lg">
                <div id="notification" class="hidden p-4 mb-4 text-sm rounded-lg" role="alert"></div>
                <form id="addressForm" class="bg-white p-8 rounded-lg shadow-md border border-gray-200 space-y-6">
                    <h2 class="text-2xl font-bold text-green-700 text-center">Update Address</h2>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Plot No:</label>
                        <input type="text" name="plotno" id="plotno" required
                            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" placeholder="Loading...">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Street:</label>
                        <input type="text" name="street" id="street" required
                            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" placeholder="Loading...">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">City:</label>
                        <input type="text" name="city" id="city" required pattern="^[A-Za-z\s]+$" title="City should contain only letters"
                            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" placeholder="Loading...">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">State:</label>
                        <input type="text" name="state" id="state" required pattern="^[A-Za-z\s]+$" title="State should contain only letters"
                            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" placeholder="Loading...">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Pincode:</label>
                        <input type="number" name="pincode" id="pincode" required pattern="^[0-9]{6}$" title="Pincode must be a 6-digit number"
                            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" placeholder="Loading...">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Phone:</label>
                        <input type="tel" name="phone" id="phone" required pattern="^[6-9]\d{9}$" title="Phone number must start with 6-9 and be 10 digits long"
                            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" placeholder="Loading...">
                    </div>

                    <button type="submit" id="submit-btn"
                        class="w-full bg-green-600 text-white font-bold py-3 rounded-md hover:bg-green-700 transition-colors">
                        Update Address
                    </button>
                </form>
            </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("addressForm");
            const submitBtn = document.getElementById('submit-btn');
            const notification = document.getElementById('notification');

            const xhrFetch = new XMLHttpRequest();
            xhrFetch.open('GET', '/api/v1/user/account/address/details', true);
            xhrFetch.onload = function() {
                if (xhrFetch.status >= 200 && xhrFetch.status < 300) {
                    const data = JSON.parse(xhrFetch.responseText);
                    if (data.success) {
                        const address = data.address;
                        document.getElementById("plotno").value = address.plotno || '';
                        document.getElementById("street").value = address.street || '';
                        document.getElementById("city").value = address.city || '';
                        document.getElementById("state").value = address.state || '';
                        document.getElementById("pincode").value = address.pincode || '';
                        document.getElementById("phone").value = address.phone || '';
                        document.querySelectorAll('input').forEach(el => el.classList.remove('bg-gray-50'));
                    }
                }
            };
            xhrFetch.send();

            const userXhr = new XMLHttpRequest();
            userXhr.open('GET', '/api/v1/user/account/details', true);
            userXhr.onload = function() {
                if (userXhr.status >= 200 && userXhr.status < 300) {
                    const data = JSON.parse(userXhr.responseText);
                    if (data.success) {
                        document.getElementById('user-name').textContent = data.user.firstname + ' ' + data.user.lastname;
                    }
                }
            };
            userXhr.send();

            form.addEventListener("submit", function (event) {
                event.preventDefault();
                submitBtn.disabled = true;
                submitBtn.textContent = 'Saving...';

                const formData = {
                    plotno: document.getElementById("plotno").value,
                    street: document.getElementById("street").value,
                    city: document.getElementById("city").value,
                    state: document.getElementById("state").value,
                    pincode: document.getElementById("pincode").value,
                    phone: document.getElementById("phone").value,
                };
                
                const xhrSubmit = new XMLHttpRequest();
                xhrSubmit.open('POST', '/api/v1/user/account/update/address', true);
                xhrSubmit.setRequestHeader('Content-Type', 'application/json');
            
                xhrSubmit.onload = function() {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Update Address';
                    const data = JSON.parse(xhrSubmit.responseText);

                    if (data.success) {
                        showNotification('Address updated successfully!', false);
                        setTimeout(() => { window.location.href = "/api/v1/user/account/address"; }, 1500);
                    } else {
                        showNotification(data.message || "Failed to update address.", true);
                    }
                };
                xhrSubmit.onerror = function() {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Update Address';
                    showNotification("An error occurred. Please try again.", true);
                };

                xhrSubmit.send(JSON.stringify(formData));
            });
            function showNotification(message, isError = false) {
                notification.textContent = message;
                notification.className = isError 
                    ? 'p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50' 
                    : 'p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50';
                notification.classList.remove('hidden');
            }
        });
    </script>
</body>