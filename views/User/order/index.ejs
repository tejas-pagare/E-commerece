<body class="bg-green-50 py-12">
  <div class="max-w-3xl mx-auto px-4">
    <div class="bg-white p-8 shadow-lg rounded-lg border border-green-200">
      <header class="border-b pb-4 mb-6">
        <h2 class="text-2xl font-bold text-green-700">Order Summary</h2>
      </header>
      
      <div class="grid md:grid-cols-2 gap-8 mb-6">
        <div>
          <p class="text-gray-600 mb-2"><strong>Order ID:</strong> <span id="order-id" class="font-semibold text-green-700">12345</span></p>
          <p class="text-gray-600 mb-2"><strong>Status:</strong> <span id="order-status" class="px-2 py-1 text-white text-xs font-bold rounded bg-green-500">Shipped</span></p>
          <p class="text-gray-600"><strong>Payment:</strong> <span id="payment-status" class="px-2 py-1 text-white text-xs font-bold rounded bg-green-500">Completed</span> (<span id="payment-method">Credit Card</span>)</p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-green-700 mb-2">Shipping Address:</h3>
          <address class="not-italic text-gray-700">
            <strong id="fullname">John Doe</strong><br>
            <span id="address">123 Main St, Springfield</span><br>
            <span id="state-pincode">IL - 62704</span><br>
            Phone: <span id="phone" class="font-semibold">(123) 456-7890</span>
          </address>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-green-700 mb-4">Products</h3>
        <ul id="product-list" class="space-y-4">
          <li class="flex items-center space-x-4 p-4 border rounded-lg">
            <img src="https://via.placeholder.com/64" alt="Product Image" class="w-16 h-16 rounded-lg object-cover border border-green-200">
            <div class="flex-grow">
              <p class="font-medium text-green-800">Wireless Headphones</p>
              <p class="text-sm text-gray-600">Product ID: WH123</p>
            </div>
            <div class="text-right">
              <p>Quantity: <span class="px-2 py-1 text-white text-xs font-bold rounded bg-green-500">1</span></p>
              <p class="font-semibold mt-1">$99.99</p>
            </div>
          </li>
          <li class="flex items-center space-x-4 p-4 border rounded-lg">
            <img src="https://via.placeholder.com/64" alt="Product Image" class="w-16 h-16 rounded-lg object-cover border border-green-200">
            <div class="flex-grow">
              <p class="font-medium text-green-800">Smartwatch</p>
              <p class="text-sm text-gray-600">Product ID: SW456</p>
            </div>
            <div class="text-right">
              <p>Quantity: <span class="px-2 py-1 text-white text-xs font-bold rounded bg-green-500">2</span></p>
              <p class="font-semibold mt-1">$199.99</p>
            </div>
          </li>
        </ul>
      </div>

      <div class="mt-8 border-t pt-6 text-right">
        <h3 class="text-2xl font-bold text-green-700">Total: $<span id="total-amount">499.97</span></h3>
      </div>
    </div>
  </div>
</body>