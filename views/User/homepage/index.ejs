<body class="bg-gray-50">
    <!-- Header -->
    <div>

        <!-- Hero Section -->
        <section class="relative bg-gradient-to-br from-emerald-50 via-green-100 to-emerald-200  font-sans overflow-hidden">
            <div class="container mx-auto px-4 py-16">
                <div class="flex items-center">
                    <!-- Left Content -->
                    <div class="w-1/2 relative z-10">
                        <h1 class="text-5xl font-extrabold text-green-900 mb-4 leading-tight">
                            Outpace the changing <br> <span class="text-green-600">trend - Sustainably fast</span>
                          </h1>
                          <p class="text-lg text-gray-600 mb-6">
                            Stay ahead with sustainable, trend-driven fashion and essentials.<br>
                            Shop stylishly, live sustainably.
                          </p>
                        <a href = "/api/v1/user/store">
                        <button
                            class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition-colors">
                            Shop Now <i class="fas fa-arrow-right ml-2"></i>
                        </button>
                        </a>
                    </div>

                    <!-- Right Content -->
                    <div class="w-full md:w-1/2">
                        <img src="https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=600&q=80"
                            alt="Sustainable Fashion" class="w-full rounded-lg shadow-lg object-cover">
                    </div>
                    <!-- Right Content -->
                     
                    
                </div>
            </div>
        </section>


        <!-- Categories Section -->
        <section class="py-12 bg-white">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Fashion & Clothing Banner -->
                    <div class="relative overflow-hidden rounded-lg bg-green-100">
                        <div class="flex p-8">
                            <div class="w-1/2">
                                <h3 class="text-2xl font-bold text-gray-800 mb-2">Fashion & Clothing</h3>
                                <p class="text-gray-600 mb-4">Get Upto 40% Off</p>
                               <a href="/api/v1/user/store">
                                <button
                                    class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 transition-colors">
                                    Shop Now
                                </button>
                               </a> 
                            </div>
                            <div class="w-1/2">
                                <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
                                    alt="Fashion Collection" class="object-cover w-full h-48 rounded-lg">
                            </div>
                        </div>
                    </div>

                    <!-- Home Appliances Banner -->
                    <div class="relative overflow-hidden rounded-lg bg-green-100">
                        <div class="flex p-8">
                            <div class="w-1/2">
                                <h3 class="text-2xl font-bold text-gray-800 mb-2">Sell SecondHand Clothes</h3>
                                <p class="text-gray-600 mb-4">Get Upto 5% Off</p>
                              <a href="/api/v1/user/sell">
                                <button
                                class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 transition-colors">
                                Shop Now
                            </button>
                              </a>  
                            </div>
                            <div class="w-1/2">
                                <img src="https://images.unsplash.com/photo-1556905055-8f358a7a47b2?auto=format&fit=crop&w=600&q=80"
                                    alt="Home Appliances" class="object-cover w-full h-48 rounded-lg">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Popular Products Section -->
        <section class="py-12">
            <div class="container mx-auto px-4">
                <h2 class="text-2xl font-bold mb-8">Popular Products</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    <!-- iPhone 14 Pro -->
                    <% for (let i=0; i < products.length; i++) { %>
                        <a href=<%=`/api/v1/product/${products[i].id}` %>>
                            <div
                                class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow w-80 h-[480px] flex flex-col ">
                                <div class="relative h-64">
                                    <img src=<%=products[i].image %> alt="iPhone 14 Pro" class="w-full h-full object-top
                                    object-cover rounded-t-lg">
                                    <div class="absolute top-3 left-3">
                                        <span class="bg-red-500 text-white text-xs px-2 py-1 rounded">New Launch</span>
                                    </div>
                                </div>
                                <div class="p-4 flex-grow flex flex-col justify-evenly">
                                    <div>
                                        <p class="text-sm text-gray-500">
                                            <%=products[i].category%>
                                        </p>
                                        <h3 class="font-medium text-gray-800 tracking-tighter">
                                            <%= products[i].title %>
                                        </h3>
                                        <div class="flex items-center mb-2">
                                            <div class="flex text-yellow-400">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="flex flex-col gap-3 items-start justify-between mt-4">
                                        <div>
                                            <span class="text-lg font-bold">Rs.<%=products[i].price%></span>

                                        </div>
                                        <button
                                            class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors w-[100%] mx-auto">
                                            View
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </a>

                        <% } %>

                </div>
            </div>
        </section>





    </div>

</body>