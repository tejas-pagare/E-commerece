<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SwiftMart - Sustainable Fashion</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div>

        <section class="relative bg-gradient-to-br from-emerald-50 via-green-100 to-emerald-200  font-sans overflow-hidden">
            <div class="container mx-auto px-4 py-16">
                <div class="flex items-center">
                    <div class="w-1/2 relative z-10">
                         <h1 class="text-5xl font-extrabold text-green-900 mb-4 leading-tight">
                            Outpace the changing <br> <span class="text-green-600">trend - Sustainably fast</span>
                        </h1>
                          <p class="text-lg text-gray-600 mb-6">
    
                            Stay ahead with sustainable, trend-driven fashion and essentials.<br>
                            Shop stylishly, live sustainably.
                        </p>
                        <a href = "/api/v1/user/store">
                        <button
                            class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition-colors">
                             Shop Now <i class="fas fa-arrow-right ml-2"></i>
                        </button>
                        </a>
                    </div>

                     <div class="w-full md:w-1/2">
                        <img src="https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=600&q=80"
                            alt="Sustainable Fashion" class="w-full rounded-lg shadow-lg object-cover">
                    </div>
                </div>
            </div>
        </section>


        <section class="py-12 bg-white">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="relative overflow-hidden rounded-lg bg-green-100">
                         <div class="flex p-8">
                            <div class="w-1/2">
                                <h3 class="text-2xl font-bold text-gray-800 mb-2">Fashion & Clothing</h3>
                                 <p class="text-gray-600 mb-4">Get Upto 40% Off</p>
                               <a href="/api/v1/user/store">
                                <button
                                     class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 transition-colors">
                                    Shop Now
                                </button>
                               </a> 
                            </div>
                            <div class="w-1/2">
                                 <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
                                    alt="Fashion Collection" class="object-cover w-full h-48 rounded-lg">
                            </div>
                         </div>
                    </div>

                    <div class="relative overflow-hidden rounded-lg bg-green-100">
                        <div class="flex p-8">
                             <div class="w-1/2">
                                <h3 class="text-2xl font-bold text-gray-800 mb-2">Sell SecondHand Clothes</h3>
                                <p class="text-gray-600 mb-4">Get Upto 5% Off</p>
                               <a href="/api/v1/user/sell">
                                <button
                                class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 transition-colors">
                                   Shop Now
                            </button>
                               </a>  
                            </div>
                            <div class="w-1/2">
                                <img src="https://images.unsplash.com/photo-1556905055-8f358a7a47b2?auto=format&fit=crop&w=600&q=80"
                                     alt="Home Appliances" class="object-cover w-full h-48 rounded-lg">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-16">
            <div class="container mx-auto px-6">
                <h2 class="text-3xl font-bold mb-8 text-center tracking-tight">Popular Products</h2>
                <div id="product-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                    </div>
            </div>
        </section>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const xhr = new XMLHttpRequest();
            xhr.open('GET', '/api/v1/user/products', true);

            xhr.onload = function() {
                if (xhr.status >= 200 && xhr.status < 300) {
                    try {
                        const products = JSON.parse(xhr.responseText);
                        const productGrid = document.getElementById('product-grid');
                        productGrid.innerHTML = ''; // Clear any loading state

                        products.forEach(product => {
                            const productCard = `
                                <a href="/api/v1/product/${product._id}" class="group block">
                                    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden flex flex-col h-full border">
                                        <div class="relative h-64 overflow-hidden">
                                            <img src="${product.image}" alt="${product.title}" class="w-full h-full object-cover">
                                            <div class="absolute top-3 left-3">
                                                <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full font-semibold">New</span>
                                            </div>
                                        </div>
                                        <div class="p-4 flex-grow flex flex-col">
                                            <div>
                                                <p class="text-sm text-gray-500">${product.category}</p>
                                                <h3 class="font-semibold text-gray-800 tracking-tight mt-1">${product.title}</h3>
                                                <div class="flex items-center my-2">
                                                    <div class="flex text-yellow-400">
                                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star text-gray-300"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mt-auto pt-4">
                                                <span class="text-xl font-bold text-gray-900">Rs.${product.price}</span>
                                                <button class="w-full mt-2 bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors font-semibold">
                                                    View Details
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            `;
                            productGrid.innerHTML += productCard;
                        });
                    } catch (e) {
                        console.error("Error parsing product JSON:", e);
                        document.getElementById('product-grid').innerHTML = '<p class="text-center text-red-500 col-span-full">Error loading products.</p>';
                    }
                } else {
                    console.error('Request failed with status:', xhr.status);
                    document.getElementById('product-grid').innerHTML = '<p class="text-center text-red-500 col-span-full">Could not fetch products.</p>';
                }
            };

            xhr.onerror = function() {
                console.error('Network error occurred');
                document.getElementById('product-grid').innerHTML = '<p class="text-center text-red-500 col-span-full">Network error. Please try again.</p>';
            };
            
            xhr.send();
        });
    </script>
</body>
</html>